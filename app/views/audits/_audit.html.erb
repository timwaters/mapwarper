<tr>
  <% cl = cycle('table0', 'table1') %>

  <td class="<%= cl %>">
    <%= audit.created_at.to_s(:uk) %>

  </td>

  <% if audit.auditable_type.downcase == "map"
    typename = "Map"
    controller_name = "map"
    elsif audit.auditable_type.downcase == "gcp"
    typename = "Control Point"
    controller_name = "gcp"
    end %>

  <td class="<%= cl %>">
    <% user = audit.user
      if user -%>
      <%= link_to user.login, :controller=>"users",:action=>"show", :id=>user.id-%>
    <% else -%>
      &mdash;
    <%end%>
  </td>

  <td class="<%= cl %>">
    <%= link_to typename + ' ' + audit.auditable_id.to_s, activity_details_path(audit.auditable_id) -%>
  </td>

  <td class="<%= cl %>">
    <%= formatted_action(audit.action) %> &mdash; <%= summary(audit) %>
  </td>

  <td class="<%= cl %>">
    <%=audit.version.to_s %>
  </td>

  <td class="<%=cl %>">

    <%-unless defined?(page) && page =~ /detail/ -%>
      <%= link_to "Further details", activity_details_url(:id => audit) %>
    <%-end-%>
  </td>
</tr>
