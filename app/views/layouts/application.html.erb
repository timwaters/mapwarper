<!DOCTYPE html>
<html>
  <head>
    <title><%= h(@html_title) || ''-%> <%=t("common.site_title") %></title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href='//fonts.googleapis.com/css?family=Lato:400,700|Sorts+Mill+Goudy|Vidaloka' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "openlayers/2.8/OpenLayers-2.8/OpenLayers" %>
    <%= javascript_include_tag 'application' %>

    <%= csrf_meta_tags %>

    <%= yield :head %>
  </head>
  <% if @onload -%>
    <body onload="<%=@onload%>">
  <%else-%>
    <body>
  <%end%>
    <%= render :partial => 'shared/prov_stripe' %>
    
    <div id="headerDiv" class="headerDiv">
      <h1><%= link_to t('common.site_title'), root_path %></h1>
      <%= render :partial => 'shared/header' %>
      <%= render :partial => 'shared/nav' %>
      <%= render :partial => 'shared/disabled_site'%>
    </div>
    <%= breadcrumbs "application" %>
    <div id="warper-maindiv">

      <%= flash_messages %>

      <%= yield %>
      
    </div>

    <div id="footer">
      <%= render :partial => 'shared/footer' %>
    </div>

    <%= render :partial => 'shared/analytics' %>


  </body>
</html>
